{% extends 'DmThemeBundle::layout.html.twig' %}

{% block breabcrumb %}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <a href="{{ path('dashboard')}}">控制台</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <a href="{{ path('role')}}">角色管理</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <span>角色查看</span>
        </li>
    </ul>
</div>
{% endblock %}

{% block content_wrapper -%}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-docs font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">角色查看</span>
                </div>
                <div class="actions">
                    <a href="{{ path('role') }}" class="btn btn-sm green"><i class="fa fa-reply"></i> 返回角色列表</a>
                    <a href="{{ path('role_edit', {id: entity.id}) }}" class="btn btn-sm default"><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:;" class="btn btn-sm red delete-link" data-did="{{ entity.id }}"><i class="fa fa-trash-o"></i> 删除</a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <td>角色名称</td>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <td>角色标识</td>
                            <td>{{ entity.role }}</td>
                        </tr>                    
                    </tbody>
                </table>
                {{ form_delete(delete_form, entity.id) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
