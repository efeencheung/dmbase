{% extends 'DmThemeBundle::layout.html.twig' %}

{% block breabcrumb %}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <a href="{{ path('dashboard')}}">控制台</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <a href="{{ path('accesscontrol')}}">访问控制管理</a>
        </li>
        <li><i class="fa fa-angle-right"></i></li>
        <li>
            <span>访问控制查看</span>
        </li>
    </ul>
</div>
{% endblock %}

{% block content_wrapper -%}
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-docs font-green"></i>
                    <span class="caption-subject font-green sbold uppercase">访问控制查看</span>
                </div>
                <div class="actions">
                    <a href="{{ path('accesscontrol') }}" class="btn btn-sm green"><i class="fa fa-reply"></i> 返回访问控制列表</a>
                    <a href="{{ path('accesscontrol_edit', {id: entity.id}) }}" class="btn btn-sm default"><i class="fa fa-edit"></i> 编辑</a>
                    <a href="javascript:;" class="btn btn-sm red delete-link" data-did="{{ entity.id }}"><i class="fa fa-trash-o"></i> 删除</a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <td>访问控制名称</td>
                            <td>{{ entity.name }}</td>
                        </tr>
                        <tr>
                            <td>授权角色</td>
                            <td>
                                <ul class="list-unstyled">
                                    {% for role in entity.roles  %}
                                    <li><a href="{{path('role_show',{'id':role.id})}}">{{ role.name }}</a></li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>URI匹配模式</td>
                            <td>{{ entity.path }}</td>
                        </tr>
                        <tr>
                            <td>URI对应IP</td>
                            <td>{{ entity.ip }}</td>
                        </tr>
                        <tr>
                            <td>URI对应HOST</td>
                            <td>{{ entity.host }}</td>
                        </tr>
                        <tr>
                            <td>URI对应HTTP方法</td>
                            <td>{{ entity.methods }}</td>
                        </tr>                    
                    </tbody>
                </table>
                {{ form_delete(delete_form, entity.id) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
